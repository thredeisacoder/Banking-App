<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="javafxapp.LayoutController">
    <top>
        <VBox alignment="TOP_RIGHT" spacing="20.0" style="-fx-background-color:royalblue;">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="10.0"/>
            </padding>
            <Label>Header</Label>

            <Label fx:id="logOutBtn" text="Đăng xuất" onMouseClicked="#handleLogOut" style=" -fx-label-padding: 5px;  -fx-background-color: white; -fx-background-radius: 10px"/>
        </VBox>
    </top>
    <center>
        <fx:include source="home.fxml"/>
    </center>
    <bottom >
        <VBox style="-fx-background-color: royalblue ; -fx-min-height: 60px;" >
            <Label fx:id="accountBtn">Tài khoản</Label>
        </VBox>
    </bottom>
</BorderPane>

