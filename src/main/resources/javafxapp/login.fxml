<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.*?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="javafxapp.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" />
    </padding>
    <ImageView fx:id="imageView">
        <Image url="@logo.png"/>
    </ImageView>
    <Label fx:id="title" text="Đăng nhập" textFill="blueviolet" style=" -fx-font-size: 30; -fx-font-family:Calibri ; -fx-font-weight: bold;" />

    <TextField fx:id="usernameTxt" promptText="Số điện thoại"  />
    <TextField fx:id="passwordTxt" promptText="Mật khẩu"/>
    <Button fx:id="loginBtn"  style="-fx-background-color: blueviolet" text="Đăng nhập" onAction="#handleLogin"/>
</VBox>
